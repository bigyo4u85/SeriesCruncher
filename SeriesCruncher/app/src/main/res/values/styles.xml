<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <!-- Translucent status bar theme. -->
    <style name="AppTheme.TranslucentStatusBar" parent="AppTheme"></style>

    <!-- Theme.AppCompat.Light.Dialog.Alert -->
    <style name="AlertDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
    </style>

    <style name="AlertDialogAnimation" parent="Base.Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_animator</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_animator</item>
    </style>

</resources>
